{
  "expo": {
    "scheme": "capstone2",
    "name": "capstone2",
    "slug": "capstone2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.capstone2",
      "infoPlist": {
        "NSCameraUsageDescription": "We need camera access so you can record your presentation.",
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio during video recording.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save videos to your photo library.",
        "NSPhotoLibraryUsageDescription": "This app needs permission to access your photo library to save videos.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "package": "com.yourcompany.capstone2",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1F2E"
      },
      "navigationBar": {
        "backgroundColor": "#1A1F2E",
        "barStyle": "light"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_CAMERA",
        "android.permission.FOREGROUND_SERVICE_MICROPHONE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "softwareKeyboardLayoutMode": "pan",
      "windowSoftInputMode": "adjustResize"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-dev-client",
      "expo-media-library",
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "We need camera access so you can record your presentation.",
          "microphonePermissionText": "We need microphone access to capture your voice."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "11dc4851-7555-4362-97bc-956807c92d3f"
      }
    },
    "owner": "hakushaku910"
  }
}
