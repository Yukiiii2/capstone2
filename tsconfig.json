{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "module": "esnext",               
    "moduleResolution": "bundler",   
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "types": [
      "expo",
      "nativewind/types",
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": [
    "app",
    "lib",
    "**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
